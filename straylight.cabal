cabal-version: 3.8
name:          straylight
version:       0.0.1
author:        Maxim Starodub

common ghc-settings
    ghc-options:
        -haddock -Wall -Wcompat -Wredundant-constraints -Wno-type-defaults
        -Wincomplete-record-updates -Wincomplete-uni-patterns -Widentities
        -Wno-missing-signatures -Wno-orphans -Wincomplete-record-selectors
        -Wno-unrecognised-warning-flags -Wno-x-partial
        -Wno-missing-pattern-synonym-signatures

    default-language: Haskell2010

common extensions
    default-extensions:
        ApplicativeDo
        BinaryLiterals
        BlockArguments
        ConstrainedClassMethods
        ConstraintKinds
        DataKinds
        DeriveGeneric
        DeriveTraversable
        DerivingVia
        DuplicateRecordFields
        EmptyCase
        ExistentialQuantification
        FlexibleContexts
        FlexibleInstances
        FunctionalDependencies
        GADTs
        ImpredicativeTypes
        InstanceSigs
        KindSignatures
        LexicalNegation
        MonadComprehensions
        MultiParamTypeClasses
        NamedWildCards
        NoDatatypeContexts
        NoFieldSelectors
        NoStarIsType
        NumericUnderscores
        OverloadedLists
        OverloadedRecordDot
        OverloadedStrings
        ParallelListComp
        PartialTypeSignatures
        PatternSynonyms
        PolyKinds
        PostfixOperators
        QualifiedDo
        QuantifiedConstraints
        RankNTypes
        RecursiveDo
        ScopedTypeVariables
        StandaloneDeriving
        StandaloneKindSignatures
        TupleSections
        TypeApplications
        TypeFamilies
        TypeOperators
        UndecidableInstances

common imports
    build-depends:
        , ansi-terminal
        , base           ^>=4.20.0.0
        , containers
        , megaparsec
        , mtl

library
    import:          ghc-settings, extensions, imports
    hs-source-dirs:  src
    exposed-modules:
        Core
        Elab
        Order
        Parse
        Pretty
        Superpos
        Unif

executable straylight
    import:         ghc-settings, extensions, imports
    main-is:        Main.hs
    ghc-options:    -main-is Main
    hs-source-dirs: src
    build-depends:  straylight

test-suite straylight-test
    import:         ghc-settings, extensions, imports
    main-is:        Spec.hs
    ghc-options:    -main-is Spec
    hs-source-dirs: test
    build-depends:
        , generic-arbitrary
        , hspec
        , QuickCheck
        , regex-compat
        , straylight
